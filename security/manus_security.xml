<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="group_manus_user" model="res.groups">
        <field name="name">Usuario de Manuscritos</field>
        <field name="category_id" ref="base.module_category_document_management"/>
    </record>
    
    <record id="group_manus_manager" model="res.groups">
        <field name="name">Administrador de Manuscritos</field>
        <field name="category_id" ref="base.module_category_document_management"/>
        <field name="implied_ids" eval="[(4, ref('group_manus_user'))]"/>
    </record>

    <record id="rule_manus_user" model="ir.rule">
        <field name="name">Manuscritos personales</field>
        <field name="model_id" ref="model_manus_manuscript"/>
        <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
        <field name="groups" eval="[(4, ref('group_manus_user'))]"/>
    </record>
</odoo>
