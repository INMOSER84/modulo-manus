<odoo>
    <data noupdate="1">
        <!-- Tipos de Servicio -->
        <record id="service_type_maintenance" model="service.type">
            <field name="name">Mantenimiento Preventivo</field>
            <field name="code">MP</field>
            <field name="price">150.00</field>
            <field name="duration">2.00</field>
            <field name="description">Mantenimiento preventivo completo</field>
            <field name="active">True</field>
        </record>
        
        <record id="service_type_repair" model="service.type">
            <field name="name">Reparación General</field>
            <field name="code">RG</field>
            <field name="price">200.00</field>
            <field name="duration">3.00</field>
            <field name="description">Reparación general de equipos</field>
            <field name="active">True</field>
        </record>
        
        <!-- Equipos de Servicio -->
        <record id="equipment_laptop_1" model="service.equipment">
            <field name="name">Laptop Dell Inspiron</field>
            <field name="serial_number">DL123456</field>
            <field name="equipment_type_id" ref="equipment_type_laptop"/>
            <field name="brand_id" ref="brand_dell"/>
            <field name="model_id" ref="model_inspiron"/>
            <field name="client_id" ref="res_partner_1"/>
            <field name="custom_stock">5</field>
            <field name="stock_alert_threshold">2</field>
            <field name="status">active</field>
        </record>
        
        <record id="equipment_printer_1" model="service.equipment">
            <field name="name">Impresora HP LaserJet</field>
            <field name="serial_number">HP789012</field>
            <field name="equipment_type_id" ref="equipment_type_printer"/>
            <field name="brand_id" ref="brand_hp"/>
            <field name="model_id" ref="model_laserjet"/>
            <field name="client_id" ref="res_partner_2"/>
            <field name="custom_stock">3</field>
            <field name="stock_alert_threshold">1</field>
            <field name="status">active</field>
        </record>
        
        <!-- Órdenes de Servicio -->
        <record id="service_order_1" model="service.order">
            <field name="name">SO-001</field>
            <field name="client_id" ref="res_partner_1"/>
            <field name="equipment_id" ref="equipment_laptop_1"/>
            <field name="service_type_id" ref="service_type_maintenance"/>
            <field name="technician_id" ref="hr_employee_technician"/>
            <field name="scheduled_date" eval="(DateTime.today() + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="description">Mantenimiento preventivo programado</field>
            <field name="custom_sale_type">service</field>
            <field name="priority">0</field>
            <field name="state">draft</field>
        </record>
        
        <record id="service_order_2" model="service.order">
            <field name="name">SO-002</field>
            <field name="client_id" ref="res_partner_2"/>
            <field name="equipment_id" ref="equipment_printer_1"/>
            <field name="service_type_id" ref="service_type_repair"/>
            <field name="technician_id" ref="hr_employee_technician"/>
            <field name="scheduled_date" eval="(DateTime.today() + timedelta(days=2)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="description">Reparación de impresora</field>
            <field name="custom_sale_type">retail</field>
            <field name="priority">1</field>
            <field name="state">confirmed</field>
        </record>
        
        <!-- Partes Utilizadas en Servicios -->
        <record id="service_part_1" model="service.order.refaction.line">
            <field name="order_id" ref="service_order_1"/>
            <field name="product_id" ref="product_product_1"/>
            <field name="description">Memoria RAM 8GB</field>
            <field name="quantity">1</field>
            <field name="price">50.00</field>
        </record>
        
        <!-- Historial de Stock -->
        <record id="stock_history_1" model="stock.history">
            <field name="product_id" ref="equipment_laptop_1"/>
            <field name="previous_stock">0</field>
            <field name="new_stock">5</field>
            <field name="operation">CREATE</field>
            <field name="date" eval="(DateTime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="user_id" ref="base.user_admin"/>
        </record>
    </data>
</odoo>
