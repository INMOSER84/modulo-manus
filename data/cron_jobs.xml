<odoo>
    <data noupdate="1">
        <!-- Tarea programada para enviar alertas de stock -->
        <record id="ir_cron_send_stock_alerts" model="ir.cron">
            <field name="name">Enviar Alertas de Stock</field>
            <field name="model_id" ref="model_service_equipment"/>
            <field name="state">code</field>
            <field name="code">model._send_stock_alerts()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>
        
        <!-- Tarea programada para actualizar estados de servicios -->
        <record id="ir_cron_update_service_status" model="ir.cron">
            <field name="name">Actualizar Estados de Servicios</field>
            <field name="model_id" ref="model_service_order"/>
            <field name="state">code</field>
            <field name="code">model._update_service_status()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">hours</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>
        
        <!-- Tarea programada para generar reportes diarios -->
        <record id="ir_cron_generate_daily_reports" model="ir.cron">
            <field name="name">Generar Reportes Diarios</field>
            <field name="model_id" ref="model_service_order"/>
            <field name="state">code</field>
            <field name="code">model._generate_daily_reports()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
