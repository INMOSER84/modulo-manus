<odoo>
    <!-- Vista de formulario de equipo de servicio -->
    <record id="view_service_equipment_form" model="ir.ui.view">
        <field name="name">service.equipment.form</field>
        <field name="model">service.equipment</field>
        <field name="arch" type="xml">
            <form string="Equipo de Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="serial_number"/>
                            <field name="equipment_type_id"/>
                            <field name="brand_id"/>
                            <field name="model_id"/>
                            <field name="client_id"/>
                            <field name="custom_stock"/>
                            <field name="stock_alert_threshold"/>
                        </group>
                        <group>
                            <field name="purchase_date"/>
                            <field name="warranty_expiry"/>
                            <field name="last_service_date"/>
                            <field name="next_service_date"/>
                            <field name="status"/>
                            <field name="technician_id"/>
                            <field name="last_inventory_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description"/>
                        </page>
                        <page string="Historial de Servicios">
                            <field name="service_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="service_date"/>
                                    <field name="technician_id"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Historial de Stock">
                            <field name="stock_history_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="operation"/>
                                    <field name="previous_stock"/>
                                    <field name="new_stock"/>
                                    <field name="difference"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_update_inventory" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-refresh"
                            invisible="id == False">
                        <field string="Actualizar Inventario" name="last_inventory_date" widget="statinfo"/>
                    </button>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol de equipo de servicio -->
    <record id="view_service_equipment_tree" model="ir.ui.view">
        <field name="name">service.equipment.tree</field>
        <field name="model">service.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipos de Servicio">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="client_id"/>
                <field name="equipment_type_id"/>
                <field name="status"/>
                <field name="custom_stock"/>
                <field name="last_service_date"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda de equipo de servicio -->
    <record id="view_service_equipment_search" model="ir.ui.view">
        <field name="name">service.equipment.search</field>
        <field name="model">service.equipment</field>
        <field name="arch" type="xml">
            <search string="Buscar Equipos">
                <field name="name"/>
                <field name="serial_number"/>
                <field name="client_id"/>
                <field name="equipment_type_id"/>
                <field name="brand_id"/>
                <field name="model_id"/>
                <separator/>
                <filter name="active" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactivos" domain="[('active', '=', False)]"/>
                <filter name="low_stock" string="Stock Bajo" domain="[('custom_stock', '<=', stock_alert_threshold)]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_client" string="Cliente" context="{'group_by': 'client_id'}"/>
                    <filter name="group_type" string="Tipo de Equipo" context="{'group_by': 'equipment_type_id'}"/>
                    <filter name="group_status" string="Estado" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana para equipos de servicio -->
    <record id="action_service_equipment" model="ir.actions.act_window">
        <field name="name">Equipos de Servicio</field>
        <field name="res_model">service.equipment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay equipos de servicio registrados
            </p>
            <p>
                Cree nuevos equipos de servicio para comenzar a gestionarlos.
            </p>
        </field>
    </record>
</odoo>
