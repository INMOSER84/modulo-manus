<odoo>
    <!-- Vista de formulario de orden de servicio -->
    <record id="view_service_order_form" model="ir.ui.view">
        <field name="name">service.order.form</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <form string="Orden de Servicio">
                <header>
                    <button name="action_confirm_service" string="Confirmar" type="object" class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_start_service" string="Iniciar" type="object" class="btn-primary" invisible="state != 'confirmed'"/>
                    <button name="action_complete_service" string="Completar" type="object" class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel_service" string="Cancelar" type="object" class="btn-danger" invisible="state in ('done', 'cancel')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,in_progress,done"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="client_id"/>
                            <field name="equipment_id"/>
                            <field name="service_type_id"/>
                            <field name="technician_id"/>
                            <field name="scheduled_date"/>
                            <field name="custom_sale_type"/>
                            <field name="priority"/>
                            <field name="is_sale_order"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                            <field name="total_cost"/>
                            <field name="invoice_id"/>
                            <field name="sale_order_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description"/>
                        </page>
                        <page string="Partes Utilizadas">
                            <field name="parts_used">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="price"/>
                                    <field name="total" sum="Total"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notas">
                            <field name="notes"/>
                        </page>
                        <page string="Historial de Stock">
                            <field name="stock_history_ids">
                                <tree>
                                    <field name="date"/>
                                    <field name="operation"/>
                                    <field name="previous_stock"/>
                                    <field name="new_stock"/>
                                    <field name="difference"/>
                                    <field name="user_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_button_box" name="button_box">
                    <button name="action_create_invoice" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-pencil-square-o"
                            invisible="invoice_id or state != 'done'"
                            help="Crear factura"/>
                    <field name="invoice_id" widget="statbutton" invisible="not invoice_id"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol de orden de servicio -->
    <record id="view_service_order_tree" model="ir.ui.view">
        <field name="name">service.order.tree</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <tree string="Órdenes de Servicio" decoration-info="state=='draft'" decoration-success="state=='done'" decoration-warning="state=='in_progress'">
                <field name="name"/>
                <field name="client_id"/>
                <field name="equipment_id"/>
                <field name="service_type_id"/>
                <field name="technician_id"/>
                <field name="scheduled_date"/>
                <field name="state"/>
                <field name="custom_sale_type"/>
                <field name="priority"/>
                <field name="total_cost"/>
            </tree>
        </field>
    </record>

    <!-- Vista de calendario de orden de servicio -->
    <record id="view_service_order_calendar" model="ir.ui.view">
        <field name="name">service.order.calendar</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Servicios" date_start="scheduled_date" color="state">
                <field name="name"/>
                <field name="client_id"/>
                <field name="technician_id"/>
            </calendar>
        </field>
    </record>

    <!-- Vista de búsqueda de orden de servicio -->
    <record id="view_service_order_search" model="ir.ui.view">
        <field name="name">service.order.search</field>
        <field name="model">service.order</field>
        <field name="arch" type="xml">
            <search string="Buscar Órdenes">
                <field name="name"/>
                <field name="client_id"/>
                <field name="equipment_id"/>
                <field name="technician_id"/>
                <field name="service_type_id"/>
                <separator/>
                <filter name="draft" string="Borrador" domain="[('state', '=', 'draft')]"/>
                <filter name="confirmed" string="Confirmado" domain="[('state', '=', 'confirmed')]"/>
                <filter name="in_progress" string="En Progreso" domain="[('state', '=', 'in_progress')]"/>
                <filter name="done" string="Realizado" domain="[('state', '=', 'done')]"/>
                <filter name="cancel" string="Cancelado" domain="[('state', '=', 'cancel')]"/>
                <separator/>
                <filter name="retail" string="Retail" domain="[('custom_sale_type', '=', 'retail')]"/>
                <filter name="wholesale" string="Wholesale" domain="[('custom_sale_type', '=', 'wholesale')]"/>
                <filter name="service" string="Servicio" domain="[('custom_sale_type', '=', 'service')]"/>
                <filter name="warranty" string="Garantía" domain="[('custom_sale_type', '=', 'warranty')]"/>
                <separator/>
                <filter name="priority_high" string="Prioridad Alta" domain="[('priority', '>=', '1')]"/>
                <separator/>
                <group expand="0" string="Agrupar por">
                    <filter name="group_client" string="Cliente" context="{'group_by': 'client_id'}"/>
                    <filter name="group_technician" string="Técnico" context="{'group_by': 'technician_id'}"/>
                    <filter name="group_state" string="Estado" context="{'group_by': 'state'}"/>
                    <filter name="group_type" string="Tipo de Venta" context="{'group_by': 'custom_sale_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana para órdenes de servicio -->
    <record id="action_service_order" model="ir.actions.act_window">
        <field name="name">Órdenes de Servicio</field>
        <field name="res_model">service.order</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{'search_default_draft': 1, 'search_default_confirmed': 1, 'search_default_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay órdenes de servicio registradas
            </p>
            <p>
                Cree nuevas órdenes de servicio para comenzar a gestionarlas.
            </p>
        </field>
    </record>
</odoo>
