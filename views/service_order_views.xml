<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Vista de formulario para órdenes de servicio -->
        <record id="view_service_order_form" model="ir.ui.view">
            <field name="name">inmoser.service.order.form</field>
            <field name="model">inmoser.service.order</field>
            <field name="arch" type="xml">
                <form string="Service Order">
                    <header>
                        <button name="action_assign_technician" type="object" 
                                string="Assign Technician" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_start_service" type="object" 
                                string="Start Service" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'assigned')]}"/>
                        <button name="action_request_approval" type="object" 
                                string="Request Approval" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'in_progress')]}"/>
                        <button name="action_customer_accept" type="object" 
                                string="Accept" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'pending_approval')]}"/>
                        <button name="action_customer_reject" type="object" 
                                string="Reject"
                                attrs="{'invisible': [('state', '!=', 'pending_approval')]}"/>
                        <button name="action_complete_service" type="object" 
                                string="Complete Service" class="oe_highlight"
                                attrs="{'invisible': [('state', '!=', 'accepted')]}"/>
                        <button name="action_reschedule" type="object" 
                                string="Reschedule"
                                attrs="{'invisible': [('state', 'in', ['done', 'cancelled'])]}"/>
                        <button name="action_cancel" type="object" 
                                string="Cancel"
                                attrs="{'invisible': [('state', 'in', ['done', 'cancelled'])]}"/>
                        <button name="action_generate_invoice" type="object" 
                                string="Generate Invoice"
                                attrs="{'invisible': ['|', ('state', '!=', 'done'), ('invoice_id', '!=', False)]}"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,assigned,in_progress,pending_approval,accepted,done"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_refactions" type="object" 
                                    class="oe_stat_button" icon="fa-cogs">
                                <field name="refaction_count" widget="statbutton" string="Refactions"/>
                            </button>
                            <button name="%(action_service_order_calendar)d" type="action" 
                                    class="oe_stat_button" icon="fa-calendar"
                                    context="{'search_default_assigned_technician_id': assigned_technician_id}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text">Calendar</span>
                                </div>
                            </button>
                        </div>
                        
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        
                        <group>
                            <group name="customer_info" string="Customer Information">
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="equipment_id" 
                                       domain="[('partner_id', '=', partner_id)]"
                                       context="{'default_partner_id': partner_id}"/>
                                <field name="service_type_id"/>
                                <field name="priority" widget="priority"/>
                            </group>
                            <group name="service_info" string="Service Information">
                                <field name="assigned_technician_id" 
                                       domain="[('x_inmoser_is_technician', '=', True)]"/>
                                <field name="scheduled_date"/>
                                <field name="start_date" readonly="1"/>
                                <field name="end_date" readonly="1"/>
                                <field name="duration" readonly="1" widget="float_time"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="Service Details" name="service_details">
                                <group>
                                    <group string="Reported Issue">
                                        <field name="reported_fault" nolabel="1" 
                                               placeholder="Describe the fault reported by the customer..."/>
                                    </group>
                                    <group string="Diagnosis" 
                                           attrs="{'invisible': [('state', 'in', ['draft', 'assigned'])]}">
                                        <field name="diagnosis" nolabel="1" 
                                               placeholder="Technical diagnosis of the problem..."/>
                                    </group>
                                </group>
                                <group string="Work Performed" 
                                       attrs="{'invisible': [('state', 'in', ['draft', 'assigned', 'in_progress'])]}">
                                    <field name="work_performed" nolabel="1" 
                                           placeholder="Describe the work performed..."/>
                                </group>
                            </page>
                            
                            <page string="Refactions" name="refactions">
                                <field name="refaction_line_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id" 
                                               domain="[('type', 'in', ['product', 'consu'])]"/>
                                        <field name="description"/>
                                        <field name="quantity"/>
                                        <field name="product_uom_id" readonly="1"/>
                                        <field name="unit_price"/>
                                        <field name="total_price" readonly="1"/>
                                        <field name="available_qty" readonly="1" 
                                               attrs="{'column_invisible': [('parent.state', 'in', ['draft', 'assigned'])]}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="total_amount" readonly="1"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </page>
                            
                            <page string="Customer Approval" name="approval"
                                  attrs="{'invisible': [('state', 'in', ['draft', 'assigned'])]}">
                                <group>
                                    <group string="Approval Status">
                                        <field name="acceptance_status" widget="radio"/>
                                        <field name="customer_signature" widget="image" 
                                               attrs="{'invisible': [('acceptance_status', '!=', 'accepted')]}"/>
                                    </group>
                                    <group string="Rejection Details" 
                                           attrs="{'invisible': [('acceptance_status', '!=', 'rejected')]}">
                                        <field name="rejection_reason" nolabel="1" 
                                               placeholder="Reason for rejection..."/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Evidence Photos" name="photos"
                                  attrs="{'invisible': [('state', 'in', ['draft', 'assigned'])]}">
                                <group>
                                    <group string="Before Service">
                                        <field name="photo_before" widget="image" 
                                               options="{'size': [300, 200]}"/>
                                    </group>
                                    <group string="After Service" 
                                           attrs="{'invisible': [('state', '!=', 'done')]}">
                                        <field name="photo_after" widget="image" 
                                               options="{'size': [300, 200]}"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Financial" name="financial"
                                  attrs="{'invisible': [('state', 'in', ['draft', 'assigned'])]}">
                                <group>
                                    <group string="Pricing">
                                        <field name="total_amount" readonly="1"/>
                                        <field name="currency_id"/>
                                    </group>
                                    <group string="Invoice" 
                                           attrs="{'invisible': [('invoice_id', '=', False)]}">
                                        <field name="invoice_id" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            
                            <page string="Internal Notes" name="notes">
                                <field name="notes" placeholder="Internal notes and comments..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        
        <!-- Vista de árbol para órdenes de servicio -->
        <record id="view_service_order_tree" model="ir.ui.view">
            <field name="name">inmoser.service.order.tree</field>
            <field name="model">inmoser.service.order</field>
            <field name="arch" type="xml">
                <tree string="Service Orders" decoration-info="state=='draft'" 
                      decoration-warning="state=='assigned'" decoration-success="state=='done'"
                      decoration-danger="state=='cancelled'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="equipment_id"/>
                    <field name="service_type_id"/>
                    <field name="assigned_technician_id"/>
                    <field name="scheduled_date"/>
                    <field name="priority" widget="priority"/>
                    <field name="state" widget="badge" 
                           decoration-info="state=='draft'"
                           decoration-warning="state in ['assigned', 'in_progress']"
                           decoration-success="state=='done'"
                           decoration-danger="state=='cancelled'"/>
                    <field name="total_amount" sum="Total"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="is_overdue" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <!-- Vista kanban para órdenes de servicio -->
        <record id="view_service_order_kanban" model="ir.ui.view">
            <field name="name">inmoser.service.order.kanban</field>
            <field name="model">inmoser.service.order</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="equipment_id"/>
                    <field name="assigned_technician_id"/>
                    <field name="scheduled_date"/>
                    <field name="priority"/>
                    <field name="state"/>
                    <field name="total_amount"/>
                    <field name="currency_id"/>
                    <field name="is_overdue"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click 
                                             #{record.is_overdue.raw_value ? 'oe_kanban_card_danger' : ''}">
                                <div class="o_dropdown_kanban dropdown">
                                    <a class="dropdown-toggle o-no-caret btn" role="button" 
                                       data-toggle="dropdown" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a t-if="widget.editable" role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                        <a t-if="widget.deletable" role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    </div>
                                </div>
                                <div class="oe_kanban_content">
                                    <div class="oe_kanban_details">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <field name="partner_id"/>
                                        </div>
                                        <div class="o_kanban_record_body">
                                            <field name="equipment_id"/>
                                            <br/>
                                            <t t-if="record.assigned_technician_id.raw_value">
                                                <i class="fa fa-user"/> <field name="assigned_technician_id"/>
                                            </t>
                                            <br/>
                                            <t t-if="record.scheduled_date.raw_value">
                                                <i class="fa fa-calendar"/> <field name="scheduled_date"/>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_kanban_footer">
                                    <div class="oe_kanban_footer_left">
                                        <span class="oe_kanban_bottom_right">
                                            <field name="total_amount" widget="monetary"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_footer_right">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <!-- Vista de calendario para órdenes de servicio -->
        <record id="view_service_order_calendar" model="ir.ui.view">
            <field name="name">inmoser.service.order.calendar</field>
            <field name="model">inmoser.service.order</field>
            <field name="arch" type="xml">
                <calendar string="Service Orders Calendar" 
                          date_start="scheduled_date" 
                          color="assigned_technician_id"
                          quick_add="False"
                          event_open_popup="true"
                          mode="month">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="equipment_id"/>
                    <field name="assigned_technician_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>
        
        <!-- Vista de búsqueda para órdenes de servicio -->
        <record id="view_service_order_search" model="ir.ui.view">
            <field name="name">inmoser.service.order.search</field>
            <field name="model">inmoser.service.order</field>
            <field name="arch" type="xml">
                <search string="Service Orders">
                    <field name="name" string="Order Number"/>
                    <field name="partner_id" string="Customer"/>
                    <field name="equipment_id" string="Equipment"/>
                    <field name="assigned_technician_id" string="Technician"/>
                    <field name="service_type_id" string="Service Type"/>
                    <field name="reported_fault" string="Reported Fault"/>
                    
                    <filter string="My Orders" name="my_orders" 
                            domain="[('assigned_technician_id.user_id', '=', uid)]"/>
                    <filter string="Draft" name="draft" 
                            domain="[('state', '=', 'draft')]"/>
                    <filter string="Assigned" name="assigned" 
                            domain="[('state', '=', 'assigned')]"/>
                    <filter string="In Progress" name="in_progress" 
                            domain="[('state', '=', 'in_progress')]"/>
                    <filter string="Pending Approval" name="pending_approval" 
                            domain="[('state', '=', 'pending_approval')]"/>
                    <filter string="Accepted" name="accepted" 
                            domain="[('state', '=', 'accepted')]"/>
                    <filter string="Done" name="done" 
                            domain="[('state', '=', 'done')]"/>
                    <filter string="Overdue" name="overdue" 
                            domain="[('is_overdue', '=', True)]"/>
                    <filter string="High Priority" name="high_priority" 
                            domain="[('priority', 'in', ['high', 'urgent'])]"/>
                    
                    <separator/>
                    <filter string="Today" name="today" 
                            domain="[('scheduled_date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), 
                                     ('scheduled_date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <filter string="This Week" name="this_week" 
                            domain="[('scheduled_date', '&gt;=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), 
                                     ('scheduled_date', '&lt;', ((context_today() - datetime.timedelta(days=context_today().weekday())) + datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter string="This Month" name="this_month" 
                            domain="[('scheduled_date', '&gt;=', datetime.datetime.now().strftime('%Y-%m-01')), 
                                     ('scheduled_date', '&lt;', (datetime.datetime.now().replace(day=1) + datetime.timedelta(days=32)).replace(day=1).strftime('%Y-%m-%d'))]"/>
                    
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_customer" 
                                context="{'group_by': 'partner_id'}"/>
                        <filter string="Technician" name="group_technician" 
                                context="{'group_by': 'assigned_technician_id'}"/>
                        <filter string="Service Type" name="group_service_type" 
                                context="{'group_by': 'service_type_id'}"/>
                        <filter string="State" name="group_state" 
                                context="{'group_by': 'state'}"/>
                        <filter string="Priority" name="group_priority" 
                                context="{'group_by': 'priority'}"/>
                        <filter string="Scheduled Date" name="group_scheduled_date" 
                                context="{'group_by': 'scheduled_date:day'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- Acción principal para órdenes de servicio -->
        <record id="action_service_order" model="ir.actions.act_window">
            <field name="name">Service Orders</field>
            <field name="res_model">inmoser.service.order</field>
            <field name="view_mode">kanban,tree,form,calendar</field>
            <field name="search_view_id" ref="view_service_order_search"/>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first service order!
                </p>
                <p>
                    Service orders help you track and manage customer equipment maintenance and repairs.
                </p>
            </field>
        </record>
        
        <!-- Acción de calendario para órdenes de servicio -->
        <record id="action_service_order_calendar" model="ir.actions.act_window">
            <field name="name">Service Orders Calendar</field>
            <field name="res_model">inmoser.service.order</field>
            <field name="view_mode">calendar,kanban,tree,form</field>
            <field name="view_id" ref="view_service_order_calendar"/>
            <field name="search_view_id" ref="view_service_order_search"/>
            <field name="context">{'search_default_assigned': 1}</field>
        </record>
        
    </data>
</odoo>

