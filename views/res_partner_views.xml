<odoo>
    <!-- Vista de formulario de partner (heredada) -->
    <record id="view_partner_form_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="is_service_client"/>
                <field name="client_code"/>
            </field>
            <notebook position="inside">
                <page string="Equipos">
                    <field name="equipment_ids">
                        <tree>
                            <field name="name"/>
                            <field name="serial_number"/>
                            <field name="equipment_type_id"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </page>
                <page string="Servicios">
                    <field name="service_order_ids">
                        <tree>
                            <field name="name"/>
                            <field name="service_type_id"/>
                            <field name="scheduled_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </page>
            </notebook>
        </field>
    </record>

    <!-- Vista de Ã¡rbol de partner (heredada) -->
    <record id="view_partner_tree_inherit" model="ir.ui.view">
        <field name="name">res.partner.tree.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <field name="display_name" position="after">
                <field name="is_service_client"/>
                <field name="client_code"/>
            </field>
        </field>
    </record>

    <!-- Vista de bÃºsqueda de partner (heredada) -->
    <record id="view_partner_search_inherit" model="ir.ui.view">
        <field name="name">res.partner.search.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="supplier" position="after">
                <filter name="service_client" string="Clientes de Servicio" domain="[('is_service_client', '=', True)]"/>
            </filter>
            <field name="name" position="after">
                <field name="client_code"/>
            </field>
        </field>
    </record>
</odoo>
