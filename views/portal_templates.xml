<odoo>
    <template id="portal_my_home" inherit_id="portal.portal_my_home" name="My Services">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <div class="col-lg-3 col-md-4 col-sm-6 col-6">
                <a href="/my/services" class="o_portal_doc_card">
                    <t t-call="portal.portal_card">
                        <t t-set="title">Servicios</t>
                        <t t-set="text" t-value="len(services)"/>
                        <t t-set="icon">fa-wrench</t>
                    </t>
                </a>
            </div>
        </xpath>
    </template>

    <template id="portal_my_services" name="My Services">
        <t t-call="portal.portal_layout">
            <t t-set="title">Servicios</t>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h3>Mis Servicios</h3>
                        <t t-if="services">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Número</th>
                                        <th>Equipo</th>
                                        <th>Tipo de Servicio</th>
                                        <th>Fecha Programada</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="services" t-as="service">
                                        <td><a t-attf-href="/my/service/#{service.id}"><t t-esc="service.name"/></a></td>
                                        <td><t t-esc="service.equipment_id.name"/></td>
                                        <td><t t-esc="service.service_type_id.name"/></td>
                                        <td><t t-esc="service.scheduled_date"/></td>
                                        <td><span class="badge badge-pill badge-info"><t t-esc="service.state"/></span></td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <p>No hay servicios registrados.</p>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_service" name="My Service">
        <t t-call="portal.portal_layout">
            <t t-set="title" t-value="service.name"/>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h3><t t-esc="service.name"/></h3>
                        <div class="row">
                            <div class="col-6">
                                <table class="table">
                                    <tr>
                                        <th>Cliente:</th>
                                        <td><t t-esc="service.client_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Equipo:</th>
                                        <td><t t-esc="service.equipment_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Tipo de Servicio:</th>
                                        <td><t t-esc="service.service_type_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <th>Técnico:</th>
                                        <td><t t-esc="service.technician_id.name"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-6">
                                <table class="table">
                                    <tr>
                                        <th>Fecha Programada:</th>
                                        <td><t t-esc="service.scheduled_date"/></td>
                                    </tr>
                                    <tr>
                                        <th>Estado:</th>
                                        <td><span class="badge badge-pill badge-info"><t t-esc="service.state"/></span></td>
                                    </tr>
                                    <tr>
                                        <th>Costo Total:</th>
                                        <td><t t-esc="service.total_cost"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <h4>Descripción</h4>
                                <p><t t-esc="service.description"/></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
