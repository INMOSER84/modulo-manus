<odoo>
    <record id="service_complete_wizard_form" model="ir.ui.view">
        <field name="name">service.complete.wizard.form</field>
        <field name="model">service.complete.wizard</field>
        <field name="arch" type="xml">
            <form string="Completar Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="service_order_id" invisible="1"/>
                            <field name="end_date"/>
                            <field name="duration"/>
                            <field name="total_cost"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>
                    <group>
                        <field name="parts_used">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="description"/>
                                <field name="quantity"/>
                                <field name="price"/>
                                <field name="total" sum="Total"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button name="action_complete_service" string="Completar" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancelar" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
