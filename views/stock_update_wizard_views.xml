<odoo>
    <record id="stock_update_wizard_form" model="ir.ui.view">
        <field name="name">stock.update.wizard.form</field>
        <field name="model">stock.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualizar Inventario">
                <sheet>
                    <group>
                        <group>
                            <field name="product_id" readonly="1"/>
                            <field name="new_stock"/>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_update_stock" string="Actualizar" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancelar" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
