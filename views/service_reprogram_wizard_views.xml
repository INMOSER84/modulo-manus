<odoo>
    <record id="service_reprogram_wizard_form" model="ir.ui.view">
        <field name="name">service.reprogram.wizard.form</field>
        <field name="model">service.reprogram.wizard</field>
        <field name="arch" type="xml">
            <form string="Reprogramar Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="service_order_id" invisible="1"/>
                            <field name="new_date"/>
                            <field name="new_technician_id"/>
                        </group>
                        <group>
                            <field name="reason"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_reprogram_service" string="Reprogramar" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancelar" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
