<odoo>
    <!-- Vista de formulario de tipo de servicio -->
    <record id="view_service_type_form" model="ir.ui.view">
        <field name="name">service.type.form</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <form string="Tipo de Servicio">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="product_id"/>
                            <field name="price"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Descripción">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de árbol de tipo de servicio -->
    <record id="view_service_type_tree" model="ir.ui.view">
        <field name="name">service.type.tree</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <tree string="Tipos de Servicio">
                <field name="name"/>
                <field name="code"/>
                <field name="product_id"/>
                <field name="price"/>
                <field name="duration"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda de tipo de servicio -->
    <record id="view_service_type_search" model="ir.ui.view">
        <field name="name">service.type.search</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <search string="Buscar Tipos de Servicio">
                <field name="name"/>
                <field name="code"/>
                <field name="product_id"/>
                <separator/>
                <filter name="active" string="Activos" domain="[('active', '=', True)]"/>
                <filter name="inactive" string="Inactivos" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Acción de ventana para tipos de servicio -->
    <record id="action_service_type" model="ir.actions.act_window">
        <field name="name">Tipos de Servicio</field>
        <field name="res_model">service.type</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay tipos de servicio registrados
            </p>
            <p>
                Cree nuevos tipos de servicio para comenzar a gestionarlos.
            </p>
        </field>
    </record>
</odoo>
