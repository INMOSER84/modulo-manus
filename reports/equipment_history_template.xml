<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Template: Reporte de historial de equipos -->
        <template id="equipment_history_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            
                            <!-- Header -->
                            <div class="row mb-4">
                                <div class="col-8">
                                    <h2 class="text-primary">
                                        <strong>EQUIPMENT SERVICE HISTORY</strong>
                                    </h2>
                                    <h4><t t-esc="o.name"/></h4>
                                    <p class="text-muted">
                                        Equipment ID: <t t-esc="o.sequence"/>
                                        | Owner: <t t-esc="o.partner_id.name"/>
                                    </p>
                                </div>
                                <div class="col-4 text-right">
                                    <t t-if="o.qr_code">
                                        <img t-att-src="'data:image/png;base64,' + o.qr_code.decode('utf-8')" 
                                             style="width: 100px; height: 100px;"/>
                                        <br/>
                                        <small class="text-muted">Equipment QR Code</small>
                                    </t>
                                </div>
                            </div>
                            
                            <!-- Información del equipo -->
                            <div class="row mb-4">
                                <div class="col-6">
                                    <h5 class="text-primary">Equipment Details</h5>
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td><strong>Type:</strong></td>
                                            <td><t t-esc="o.equipment_type"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Brand:</strong></td>
                                            <td><t t-esc="o.brand"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Model:</strong></td>
                                            <td><t t-esc="o.model"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Serial Number:</strong></td>
                                            <td><t t-esc="o.serial_number"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Location:</strong></td>
                                            <td><t t-esc="o.location"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Installation Date:</strong></td>
                                            <td>
                                                <t t-if="o.installation_date">
                                                    <t t-esc="o.installation_date" t-options="{'widget': 'date'}"/>
                                                </t>
                                                <t t-else="">Not specified</t>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-primary">Service Statistics</h5>
                                    <t t-set="service_orders" t-value="o.service_order_ids"/>
                                    <t t-set="completed_services" t-value="service_orders.filtered(lambda s: s.state == 'done')"/>
                                    
                                    <table class="table table-sm table-borderless">
                                        <tr>
                                            <td><strong>Total Services:</strong></td>
                                            <td><t t-esc="len(service_orders)"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Completed Services:</strong></td>
                                            <td><t t-esc="len(completed_services)"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Pending Services:</strong></td>
                                            <td><t t-esc="len(service_orders.filtered(lambda s: s.state not in ['done', 'cancelled']))"/></td>
                                        </tr>
                                        <tr>
                                            <td><strong>Last Service:</strong></td>
                                            <td>
                                                <t t-if="completed_services">
                                                    <t t-set="last_service" t-value="completed_services.sorted('end_date', reverse=True)[0]"/>
                                                    <t t-esc="last_service.end_date" t-options="{'widget': 'date'}"/>
                                                </t>
                                                <t t-else="">Never serviced</t>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Total Service Cost:</strong></td>
                                            <td>
                                                <t t-set="total_cost" t-value="sum(completed_services.mapped('total_amount'))"/>
                                                <t t-esc="total_cost" t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Average Rating:</strong></td>
                                            <td>
                                                <t t-set="rated_services" t-value="completed_services.filtered(lambda s: s.customer_satisfaction)"/>
                                                <t t-if="rated_services">
                                                    <t t-set="avg_rating" t-value="sum(int(s.customer_satisfaction) for s in rated_services) / len(rated_services)"/>
                                                    <t t-esc="round(avg_rating, 1)"/>/5
                                                    <t t-foreach="range(int(round(avg_rating)))" t-as="star"> ★</t>
                                                </t>
                                                <t t-else="">Not rated</t>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            
                            <!-- Historial de servicios -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-primary">Service History</h5>
                                    
                                    <t t-if="service_orders">
                                        <table class="table table-sm">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Order #</th>
                                                    <th>Service Type</th>
                                                    <th>Technician</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                    <th>Issue</th>
                                                    <th>Cost</th>
                                                    <th>Rating</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="service_orders.sorted('create_date', reverse=True)" t-as="service">
                                                    <tr>
                                                        <td><t t-esc="service.name"/></td>
                                                        <td><t t-esc="service.service_type_id.name"/></td>
                                                        <td><t t-esc="service.assigned_technician_id.name or 'Not assigned'"/></td>
                                                        <td>
                                                            <t t-if="service.end_date">
                                                                <t t-esc="service.end_date" t-options="{'widget': 'date'}"/>
                                                            </t>
                                                            <t t-elif="service.scheduled_date">
                                                                <t t-esc="service.scheduled_date" t-options="{'widget': 'date'}"/>
                                                            </t>
                                                            <t t-else="">
                                                                <t t-esc="service.create_date" t-options="{'widget': 'date'}"/>
                                                            </t>
                                                        </td>
                                                        <td>
                                                            <span t-attf-class="badge badge-#{service.state == 'done' and 'success' or service.state == 'cancelled' and 'danger' or service.state == 'in_progress' and 'primary' or 'secondary'}">
                                                                <t t-esc="dict(service._fields['state'].selection)[service.state]"/>
                                                            </span>
                                                        </td>
                                                        <td>
                                                            <small><t t-esc="service.reported_fault[:50]"/>
                                                            <t t-if="len(service.reported_fault) > 50">...</t></small>
                                                        </td>
                                                        <td>
                                                            <t t-if="service.total_amount">
                                                                <t t-esc="service.total_amount" t-options="{'widget': 'monetary', 'display_currency': service.currency_id}"/>
                                                            </t>
                                                            <t t-else="">-</t>
                                                        </td>
                                                        <td>
                                                            <t t-if="service.customer_satisfaction">
                                                                <t t-foreach="range(int(service.customer_satisfaction))" t-as="star">★</t>
                                                            </t>
                                                            <t t-else="">-</t>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </t>
                                    <t t-else="">
                                        <div class="alert alert-info">
                                            No service history found for this equipment.
                                        </div>
                                    </t>
                                </div>
                            </div>
                            
                            <!-- Análisis de problemas frecuentes -->
                            <t t-if="completed_services">
                                <div class="row mb-4">
                                    <div class="col-6">
                                        <h5 class="text-primary">Common Issues Analysis</h5>
                                        <t t-set="service_types" t-value="{}"/>
                                        <t t-foreach="completed_services" t-as="service">
                                            <t t-set="service_type" t-value="service.service_type_id.name"/>
                                            <t t-if="service_type in service_types">
                                                <t t-set="service_types" t-value="dict(service_types, **{service_type: service_types[service_type] + 1})"/>
                                            </t>
                                            <t t-else="">
                                                <t t-set="service_types" t-value="dict(service_types, **{service_type: 1})"/>
                                            </t>
                                        </t>
                                        
                                        <table class="table table-sm">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Issue Type</th>
                                                    <th class="text-center">Frequency</th>
                                                    <th class="text-center">%</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <t t-foreach="sorted(service_types.items(), key=lambda x: x[1], reverse=True)" t-as="item">
                                                    <tr>
                                                        <td><t t-esc="item[0]"/></td>
                                                        <td class="text-center"><t t-esc="item[1]"/></td>
                                                        <td class="text-center">
                                                            <t t-esc="round((item[1] / len(completed_services)) * 100, 1)"/>%
                                                        </td>
                                                    </tr>
                                                </t>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="col-6">
                                        <h5 class="text-primary">Parts Usage Analysis</h5>
                                        <t t-set="parts_used" t-value="{}"/>
                                        <t t-foreach="completed_services" t-as="service">
                                            <t t-foreach="service.refaction_line_ids" t-as="part">
                                                <t t-set="part_name" t-value="part.product_id.name"/>
                                                <t t-if="part_name in parts_used">
                                                    <t t-set="parts_used" t-value="dict(parts_used, **{part_name: parts_used[part_name] + part.quantity})"/>
                                                </t>
                                                <t t-else="">
                                                    <t t-set="parts_used" t-value="dict(parts_used, **{part_name: part.quantity})"/>
                                                </t>
                                            </t>
                                        </t>
                                        
                                        <t t-if="parts_used">
                                            <table class="table table-sm">
                                                <thead class="thead-light">
                                                    <tr>
                                                        <th>Part</th>
                                                        <th class="text-center">Total Used</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <t t-foreach="sorted(parts_used.items(), key=lambda x: x[1], reverse=True)[:5]" t-as="item">
                                                        <tr>
                                                            <td><t t-esc="item[0]"/></td>
                                                            <td class="text-center"><t t-esc="item[1]"/></td>
                                                        </tr>
                                                    </t>
                                                </tbody>
                                            </table>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-info">
                                                No parts usage data available.
                                            </div>
                                        </t>
                                    </div>
                                </div>
                            </t>
                            
                            <!-- Recomendaciones de mantenimiento -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h5 class="text-primary">Maintenance Recommendations</h5>
                                    <div class="border p-3 bg-light">
                                        <t t-set="days_since_last_service" t-value="0"/>
                                        <t t-if="completed_services">
                                            <t t-set="last_service" t-value="completed_services.sorted('end_date', reverse=True)[0]"/>
                                            <t t-set="days_since_last_service" t-value="(datetime.datetime.now().date() - last_service.end_date.date()).days"/>
                                        </t>
                                        
                                        <t t-if="days_since_last_service > 365">
                                            <div class="alert alert-danger">
                                                <strong>Urgent:</strong> This equipment has not been serviced for over a year. 
                                                Schedule preventive maintenance immediately.
                                            </div>
                                        </t>
                                        <t t-elif="days_since_last_service > 180">
                                            <div class="alert alert-warning">
                                                <strong>Attention:</strong> Consider scheduling preventive maintenance. 
                                                Last service was <t t-esc="days_since_last_service"/> days ago.
                                            </div>
                                        </t>
                                        <t t-elif="len(completed_services) > 5">
                                            <div class="alert alert-info">
                                                <strong>High Usage:</strong> This equipment has frequent service requirements. 
                                                Consider upgrading or implementing preventive maintenance schedule.
                                            </div>
                                        </t>
                                        <t t-else="">
                                            <div class="alert alert-success">
                                                <strong>Good Condition:</strong> Equipment appears to be in good condition 
                                                with regular maintenance.
                                            </div>
                                        </t>
                                        
                                        <!-- Recomendaciones específicas basadas en el historial -->
                                        <t t-if="service_types and len(service_types) > 0">
                                            <t t-set="most_common_issue" t-value="max(service_types.items(), key=lambda x: x[1])"/>
                                            <p class="mt-2">
                                                <strong>Most Common Issue:</strong> <t t-esc="most_common_issue[0]"/> 
                                                (occurred <t t-esc="most_common_issue[1]"/> times)
                                            </p>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Garantía y próximo mantenimiento -->
                            <div class="row mb-4">
                                <div class="col-6">
                                    <h5 class="text-primary">Warranty Information</h5>
                                    <div class="border p-3">
                                        <t t-if="o.warranty_expiry_date">
                                            <p><strong>Warranty Expires:</strong> 
                                               <t t-esc="o.warranty_expiry_date" t-options="{'widget': 'date'}"/>
                                            </p>
                                            <t t-set="days_to_expiry" t-value="(o.warranty_expiry_date - datetime.datetime.now().date()).days"/>
                                            <t t-if="days_to_expiry > 0">
                                                <span class="badge badge-success">
                                                    <t t-esc="days_to_expiry"/> days remaining
                                                </span>
                                            </t>
                                            <t t-else="">
                                                <span class="badge badge-danger">Warranty Expired</span>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <p class="text-muted">No warranty information available</p>
                                        </t>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <h5 class="text-primary">Next Maintenance</h5>
                                    <div class="border p-3">
                                        <t t-if="completed_services">
                                            <t t-set="last_service_date" t-value="completed_services.sorted('end_date', reverse=True)[0].end_date"/>
                                            <t t-set="next_maintenance" t-value="last_service_date + datetime.timedelta(days=180)"/>
                                            <p><strong>Recommended Date:</strong> 
                                               <t t-esc="next_maintenance" t-options="{'widget': 'date'}"/>
                                            </p>
                                            <t t-set="days_to_maintenance" t-value="(next_maintenance.date() - datetime.datetime.now().date()).days"/>
                                            <t t-if="days_to_maintenance > 30">
                                                <span class="badge badge-success">
                                                    <t t-esc="days_to_maintenance"/> days
                                                </span>
                                            </t>
                                            <t t-elif="days_to_maintenance > 0">
                                                <span class="badge badge-warning">
                                                    <t t-esc="days_to_maintenance"/> days (soon)
                                                </span>
                                            </t>
                                            <t t-else="">
                                                <span class="badge badge-danger">Overdue</span>
                                            </t>
                                        </t>
                                        <t t-else="">
                                            <p class="text-muted">Schedule initial maintenance</p>
                                        </t>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Footer -->
                            <div class="row mt-4">
                                <div class="col-12 text-center">
                                    <small class="text-muted">
                                        Equipment History Report generated on <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                                        <br/>
                                        For maintenance scheduling, contact us at service@inmoser.com
                                    </small>
                                </div>
                            </div>
                            
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</odoo>

